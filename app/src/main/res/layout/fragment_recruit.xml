<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_recruit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        app:title="Goffer"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="Goffer"
            android:gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>
        <SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_radius"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:queryHint="支持关键字查询"
            android:searchIcon="@drawable/ic_search_grey_300_24dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
        </SearchView>
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:id="@+id/tab_cat"
        android:background="#fefefe"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabTextColor="#000"
        app:tabIndicatorHeight="3dp"
        app:tabTextAppearance="?android:attr/textAppearance"

        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#eee"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/pager_recruit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>